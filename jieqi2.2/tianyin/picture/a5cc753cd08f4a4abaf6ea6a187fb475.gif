<script>
    $(document).ready(function (e) {
        // 居中显示
        var winH = window.innerHeight || document.documentElement.clientHeight;
        var objH = (winH - 600) / 2;
        if(objH<10){
            objH=10;
        }
        $('.signIn_box').css('top', objH);

        // 登录界面的TAB
	 
    $('.signIn_main .signIn_tab').eq(0).show();
        
        $('.signIn_head li').click(function () {
            $(".signIn_tab_tip").css("visibility", "hidden");
        var index = $(this).index();
        $('.signIn_head li').siblings().removeClass('active').eq(index).addClass('active');
        $('.signIn_main .signIn_tab').hide().eq(index).show();
    });
    $(".signIn_tab_tip").css("visibility", "hidden");
        // 微信二维码
    $('.signIn_tab_other li').hover(function () {
        var quicklogin = new WxLogin({
            id: "sign_er",
            appid: "wx3212c6e2505db5f5",
            scope: "snsapi_login",
            redirect_uri: "http%3a%2f%2fhi.txtbook.com.cn%2fquicklogin%2fweixinlogin.aspx",
            state: "txtbook",
            href: "http%3a%2f%2fhi.txtbook.com.cn%2fcss%2fsignIn.css"

                });
        $(this).find('.sign_er').css('display', 'block')
		.animate({ top: -400 }, 300, function () {
		    $(this).animate({ top: -408 }, 300, function () {
		        $(this).animate({ top: -405 }, 100);
		    });
		});
    }, function () {
        $(this).find('.sign_er').hide().css('top', '-425px');
    });

        // INPUT提示
        $('.signIn_input').click(function () {
            $(this).find('span').hide();
            $(this).find('input').focus();
        });
        $('.signIn_input input').blur(function () {
            if ($(this).val() == '') {
                $(this).next().show();
            }
        });
        $('input').focus(function () {
            $(this).next('span').hide();
        });

        var nn = $("#login_account").val();
        if (nn != null && nn != undefined && nn.length > 0) {
            $("#login_account_div").find('span').hide();
            $("#login_account_div").find('input').show();
        }


});
</script>
